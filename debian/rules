#!/usr/bin/make -f

%:
	dh $@

override_dh_install:
	dh_install
	sed -i -e 's/..\/i18n/\/usr\/share\/locale/g'            	      debian/abraflexi-reminder/usr/lib/abraflexi-reminder/*.php
	sed -i -e 's/..\/vendor/\/var\/lib\/abraflexi-reminder/g' 	      debian/abraflexi-reminder/usr/lib/abraflexi-reminder/*.php
	sed -i -e 's/\.\./\/etc\/abraflexi/g'                                  debian/abraflexi-reminder/usr/lib/abraflexi-reminder/*.php
	sed -i -e 's/.\/FlexiPeeHP\/Reminder\/Notifier/\/usr\/lib\/abraflexi-reminder\/Reminder\/Notifier/g'    debian/abraflexi-reminder/usr/lib/abraflexi-reminder/*.php
	sed -i -e 's/..\/bin/\/usr\/bin/g'                                    debian/abraflexi-reminder-sms/usr/lib/abraflexi-reminder/Reminder/*Gnokii.php
