{   
    "name": "deb/flexibee-reminder",
    "description": "Reminder sender for FlexiBee written in PHP",
    "type": "project",
    "version": "0.2",
    "authors": [
        {   
            "name": "Vítězslav Dvořák",
            "email": "info@vitexsoftware.cz"
        }
    ],
    "config": {
        "vendor-dir": "/var/lib/flexibee-reminder"
    },
    "require": {
        "deb/flexibee": "*",
        "deb/ease-core": "*",
        "deb/flexibee-bricks": "*"
    },
    "autoload": {
        "psr-4": {
            "FlexiPeeHP\\Reminder\\": "./Reminder/"
        }
    },
    "repositories": [
        {   
            "type": "path",
            "url": "/usr/share/php/Ease",
            "options": {
                "symlink": true
            }
        },
        {   
            "type": "path",
            "url": "/usr/share/php/EaseHtml/",
            "options": {
                "symlink": true
            }
        },
        {   
            "type": "path",
            "url": "/usr/share/php/FlexiPeeHP",
            "options": {
                "symlink": true
            }
        },
        {   
            "type": "path",
            "url": "/usr/share/php/EaseBricks/",
            "options": {
                "symlink": true
            }
        },
        {   
            "type": "path",
            "url": "/usr/share/php/EaseTWB/",
            "options": {
                "symlink": true
            }
        },
        {   
            "type": "path",
            "url": "/usr/share/php/FlexiPeeHPBricks",
            "options": {
                "symlink": true
            }
        }
    ]

}