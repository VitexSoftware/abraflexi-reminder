            "type": "string",
            "description": {
                "en": "write output json data to",
                "cs": "write output json data to"
            },
            "defval": "reminder_{ABRAFLEXI_COMPANY}.json",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "write log messages using"
