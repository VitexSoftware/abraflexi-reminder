{
    "image": "",
    "name": "Reminder",
    "description": "Remind unsettled invoices",
    "executable": "abraflexi-reminder",
    "setup": "abraflexi-reminder-init",
    "cmdparams": "",
    "requirements": "AbraFlexi",
    "uuid": "0fd52fdd-1c83-4346-b9f9-13e82bd5d6d0",
    "deploy": "apt install abraflexi-reminder",
    "homepage": "https://github.com/VitexSoftware/abraflexi-reminder",
    "topics": "AbraFlexi,Reminder,Mail,Sms",
    "environment": {
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": "",
            "defval": "demo_de",
            "required": true
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": "AbraFlexi Login",
            "defval": "winstrom",
            "required": true
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "string",
            "description": "AbraFlexi password",
            "defval": "winstrom",
            "required": true
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": "AbraFlexi Server URI",
            "defval": "https:\/\/demo.flexibee.eu:5434",
            "required": true
        },
        "MAX_MAIL_SIZE": {
            "type": "string",
            "description": "",
            "defval": "",
            "required": true
        },
        "REMIND_FROM": {
            "type": "email",
            "description": "Remind sender mail Address",
            "defval": "",
            "required": true
        },
        "SURRENDER_DAYS": {
            "type": "number",
            "description": "Do not process old cases",
            "defval": "365",
            "required": false
        },
        "REMINDER_SKIPDOCTYPE": {
            "type": "string",
            "description": "Ignore this document types",
            "defval": "DOBROPIS,ZDD",
            "required": false
        },
        "QR_PAYMENTS": {
            "type": "checkbox",
            "description": "Add QR Codes into Mails",
            "defval": "True",
            "required": false
        },
        "ADD_LOGO": {
            "type": "checkbox",
            "description": "Add Company logo into Mails",
            "defval": "True",
            "required": false
        },
        "MUTE": {
            "type": "checkbox",
            "description": "Send notifications to customers",
            "defval": "True",
            "required": false
        },
        "EASE_MAILTO": {
            "type": "email",
            "description": "Fallback adres when MUTE is ON",
            "defval": "",
            "required": false
        },
        "SMS_SIGNATURE": {
            "type": "string",
            "description": "Signature at end of SMS",
            "defval": "",
            "required": false
        },
        "NO_REMIND_LABEL": {
            "type": "string",
            "description": "Ignore documents/customers with this Label",
            "defval": "NEUPOMINAT",
            "required": false
        },
        "MODEM_IP": {
            "type": "string",
            "description": "Huawei E5180",
            "defval": "192.168.8.10",
            "required": false
        },
        "MODEM_PASWORD": {
            "type": "string",
            "description": "Huawei E5180 Password",
            "defval": "",
            "required": false
        },
        "MAIL_CC": {
            "type": "email",
            "description": "CC Mail Address",
            "defval": "",
            "required": false
        },
        "SMS_ENGINE": {
            "type": "string",
            "description": "SMS Engine",
            "defval": "",
            "required": false
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": "write log messages using",
            "defval": "console|syslog",
            "required": false
        }
    },
    "multiflexi": "1.7.2"
}
